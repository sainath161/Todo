      .container {
        margin-top: 50px;
      }

      .card {
        background-color: #f8f9fa;
        border: none;
        border-radius: 20px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }

      .card-title {
        color: #343a40;
      }

      .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
      }

      .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
      }

      .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
      }

      .btn-secondary:hover {
        background-color: #5a6268;
        border-color: #5a6268;
      }

      .btn-lg {
        font-size: 1.25rem;
        padding: 12px 24px;
      }

      form {
        position: relative;
        padding: 20px 50px;
        display: flex;
        flex-direction: column;
        gap: 30px;
        align-items: center;
        text-decoration: none;
        width: 200px;
        overflow: hidden;
        border-radius: 40px;
      }

      form button {
        text-transform: uppercase;
      }

      form span {
        position: relative;
        color: #fff;
        font-size: 20px;
        font-family: Arial;
        letter-spacing: 8px;
        z-index: 1;
      }

      form .liquid {
        position: absolute;
        top: -80px;
        left: 0;
        width: 200px;
        height: 200px;
        background: #4973ff;
        box-shadow: inset 0 0 50px rgba(225, 225, 225, 0.5);
        transition: 0.5s;
      }

      form .liquid::after,
      form .liquid::before {
        content: "";
        width: 200%;
        height: 200%;
        position: absolute;
        top: 0;
        left: 50%;
        transform: translate(-50%, -75%);
        background: #fff;
      }

      form .liquid::before {
        border-radius: 45%;
        background: rgb(225, 225, 225, 1);
        animation: animate 5s linear infinite;
      }

      form .liquid::after {
        border-radius: 40%;
        background: rgba(215, 215, 215, 0.5);
        animation: animate 10s linear infinite;
      }

      form:hover .liquid {
        top: -120px;
      }

      @keyframes animate {
        0% {
          transform: translate(-50%, -75%) rotate(0deg);
        }
        100% {
          transform: translate(-50%, -75%) rotate(360deg);
        }
      }
    </style>
  </head>
